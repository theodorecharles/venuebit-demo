{
  "buildCommand": "cd webapp && npm run build && cd ../webapp-desktop && npm run build && mkdir -p ../webapp/dist/desktop && cp -r dist/* ../webapp/dist/desktop/",
  "outputDirectory": "webapp/dist",
  "framework": null,
  "rewrites": [
    { "source": "/desktop/api/(.*)", "destination": "/api/$1" },
    { "source": "/desktop", "destination": "/desktop/index.html" },
    { "source": "/desktop/((?!assets/).*)", "destination": "/desktop/index.html" },
    { "source": "/((?!api/|desktop/|images/).*)", "destination": "/index.html" }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Credentials", "value": "true" },
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET,POST,PUT,DELETE,PATCH,OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "Content-Type,Authorization,X-Requested-With" }
      ]
    }
  ]
}
